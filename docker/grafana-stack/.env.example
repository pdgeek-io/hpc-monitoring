# HPC Monitoring Stack - Environment Variables
# Copy this file to .env and customize for your environment

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password
GRAFANA_ROOT_URL=http://localhost:3000

# Data Retention (days/hours)
PROMETHEUS_RETENTION_DAYS=90d
PROMETHEUS_RETENTION_SIZE=50GB
LOKI_RETENTION_DAYS=90
TEMPO_RETENTION_HOURS=2160

# Network Configuration
MONITORING_NETWORK=monitoring

# Optional: External URLs
# PROMETHEUS_EXTERNAL_URL=http://prometheus.example.com
# ALERTMANAGER_EXTERNAL_URL=http://alertmanager.example.com
# GRAFANA_EXTERNAL_URL=http://grafana.example.com

# Optional: SMTP for Alertmanager
# SMTP_HOST=smtp.example.com:587
# SMTP_FROM=alerts@example.com
# SMTP_USERNAME=alertmanager
# SMTP_PASSWORD=changeme

# Optional: Slack for Alertmanager
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CHANNEL=#alerts
